<%- include("./partials/header") %>
    <section class="addItemSect">
        <h1>ADD A NEW PRODUCT</h1>
        <hr>

        <form action="/add-item" method="POST">
            <input type="text" name="productName" placeholder="Product name">
            <input type="text" name="company" placeholder="Company">
            <input type="number" name="price" placeholder="Price">
            <input type="text" name="productImgUrl" placeholder="Product Image URL">
            <input type="text" name="shopUrl" placeholder="Shop URL">
            <textarea name="productDescription" cols="30" rows="5" placeholder="Description"></textarea>
            <input type="submit" value="Add Item">
        </form>
    </section>

    <%- include("./partials/footer") %>